for (let counter = 0; counter < 9; counter ++){
	if (counter % 2 == 0){
		console.log(" " + "#" + " " + "#" + " " + "#" + " " + "#")

	}else{
		console.log("#" + " " +"#" + " " +"#" + " " +"#" + " " )
	}
}
